<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pages.NoveAuto"
             Title="NoveAuto">
    <VerticalStackLayout>
        <Label 
            Text="Značka:"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <Entry x:Name="ForBrand"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center"
               WidthRequest="250"/>

        <Label 
            Text="Model:"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry x:Name="ForModel"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"
            WidthRequest="250"/>

        <Label Text="Palivo"
               HorizontalOptions="Center"/>

        <Picker x:Name="ForFuel"
                WidthRequest="200"/>

        <Label Text="Vlastník"
            HorizontalOptions="Center"/>

        <Picker x:Name="ForOwner"
                WidthRequest="200"/>

        <Button Text="Uložit"
                HorizontalOptions="Center"
                Clicked="Button_Clicked"/>


    </VerticalStackLayout>
</ContentPage>